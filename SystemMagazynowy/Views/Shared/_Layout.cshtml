<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="author" content="Mateusz Mierzyński"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - System Magazynowy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_NavbarPartial")
    <div class="container body-content">
        @RenderBody()
        <div class="footer">
            <hr />
            <footer>
                <p>System Magazynowy &copy; @DateTime.Now.Year -  Mateusz Mierzyński</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js_scripts")
    @RenderSection("scripts", required: false)
    <script>
        var path = window.location.pathname;
        
        
        console.log("Layout PATH: " + path);
        console.log("sliced path length: " + path.split("/").length);
        console.log("sliced_path[1]: " + path.split("/")[1]);
        if (path == "/")
        {
            
            $("a.navbar-brand").addClass("active");
        }
        else
        {
            $(".navbar-nav li").has("a[href='/" + path.split("/")[1] + "']").addClass('active');
        }
        
    </script>
</body>
</html>
