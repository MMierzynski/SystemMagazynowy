@model SystemMagazynowy.Models.Assortment

@if (ViewBag.IsStocktakingOn == -1)
{
    {
        ViewBag.Title = "Usuń asortyment";
    }
    @Html.Partial("_BackToListPartial");

    <h2 class="text-center">Usuń kartotekę</h2>


    if (!String.IsNullOrEmpty(ViewBag.DeleteAlert))
    {
        <h3 style="color:red" class="text-center">Nie możesz usunąć asortymentu który znajduje się z magazynie.</h3><br />
    }
    else
    {
        <div >
            @*<hr />*@
            <h4 class="text-center">@Html.DisplayFor(model => model.Name)</h4>
            <div class="row">
                <div class="col-md-9">
                    <dl class="dl-center dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.BarCode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.BarCode)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Contractor.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Contractor.Name)
                        </dd>

                



                        <dt>
                            @Html.DisplayNameFor(model => model.Unit)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Unit)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MinimumQuantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MinimumQuantity)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MaximumQuantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MaximumQuantity)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.InitialQuantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.InitialQuantity)
                        </dd>

                    </dl>
                </div>
            </div>

    

          <h3 class="text-center">
        
                Czy na pewno chcesz usunąć wybraną pozycje?
            </h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Tak, usuń" class="btn btn-danger" /> 
                    @Html.ActionLink("Nie, wracam do listy", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            }
        </div>
    }
}
else
{
    ViewBag.Title = "INWENTARYZACJA";

    @Html.Partial("_StocktakingOnPartial");
}