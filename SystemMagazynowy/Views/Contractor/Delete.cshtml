@model SystemMagazynowy.Models.Contractor

@if (ViewBag.IsStocktakingOn == -1)
{
    {
        ViewBag.Title = "Usuń kontrahenta";
    }

    @Html.Partial("_BackToListpartial")
    <h2 class="text-center">Usuń kontrahenta</h2>

    if (Model.Assortment.Count > 0)
    {
        <h3 style="color:red" class="text-center">Nie możesz usunąć kontrahenta, do którego został przypisany asortyment.</h3><br />
    }
    else
    {
        <div >
            <h4 class="text-center">@Html.DisplayFor(model => model.Name)</h4>
            <div class="row">
                <div class="col-md-9">
                    <dl class="dl-horizontal dl-center">
                        <dt>
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Address)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ZipCode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ZipCode)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.City)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.City)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                    </dl>
                </div>
            </div>
    
            <h3 class="text-center">
        
                Czy na pewno chcesz usunąć wybraną pozycje?
            </h3>
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Tak, usuń" class="btn btn-danger" />
                    @Html.ActionLink("Nie, wracam do listy", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            }
        </div>
    }
}
else
{
    ViewBag.Title = "INWENTARYZACJA";

    @Html.Partial("_StocktakingOnPartial");
}