        <ul class="nav nav-tabs">
            <li class="active"><a href="#all-time" data-toggle="tab" >Cały okres</a></li>
            <li><a href="#last-month" data-toggle="tab">Ostatni miesiąc</a></li>
            <li><a href="#last-week" data-toggle="tab">Ostatni tydzień</a></li>
            <li><a href="#today" data-toggle="tab">Dzisiaj</a></li>
        </ul>

        <div class="tab-content">
            <div id="all-time" class="tab-pane fade in active">
                @if (@ViewBag.AllCount > 0)
                {
                <ul class="operations-in-warehouse">
                    <li>Łączna ilość operacji: @ViewBag.AllCount, w tym:</li>
                    <li>
                        <ul>
                            <li><span class="text-bold">Pz: </span> @ViewBag.PzAllCount</li>
                            <li><span class="text-bold">Pw: </span> @ViewBag.PwAllCount</li>
                            <li><span class="text-bold">Wz:</span> @ViewBag.WzAllCount</li>
                            <li><span class="text-bold">Rw: </span> @ViewBag.RwAllCount</li>
                            <li><span class="text-bold">Mm: </span> @ViewBag.MmAllCount</li>
                        </ul>
                    </li>
                </ul>
                }
                else
                {
                    <h3 class="text-center">W wybranym okresie nie zostały jeszcze przeprowadzone żadne operacje.</h3>
                }
            </div>

            <div id="last-month" class="tab-pane fade in">
                @if (@ViewBag.MonthCount>0)
                {
                <ul class="operations-in-warehouse">
                    <li>Łączna ilość operacji: @ViewBag.MonthCount, w tym:</li>
                    <li>
                        <ul>
                            <li><span class="text-bold">Pz: </span>@ViewBag.PzMonthCount</li>
