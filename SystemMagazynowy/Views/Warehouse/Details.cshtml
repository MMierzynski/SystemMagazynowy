@model SystemMagazynowy.Models.Warehouse

@if(ViewBag.IsStocktakingOn == -1)
{
    {
        ViewBag.Title = "Szczegóły magazynu";
    }

    @Html.Partial("_BackToListPartial")
    <h2 class="text-center">Magazyn: @Model.Name</h2>

    <div class="row">
        <h3 class="text-center">Podsumowanie wykonanych operacji</h3>
