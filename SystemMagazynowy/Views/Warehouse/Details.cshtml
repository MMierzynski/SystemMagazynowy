                            <li><span class="text-bold">Mm: </span>@ViewBag.MmTodayCount</li>
                        </ul>
                    </li>
                </ul>
                }
                else
                {
                <h3 class="text-center">W wybranym okresie nie zostały jeszcze przeprowadzone żadne operacje.</h3>
                }
            </div>

        
        </div>
        
        @Html.ActionLink("Lista operacji","Index","Operation",new { SearchString = Model.Name },null)

    </div>
}
else
{
    ViewBag.Title = "INWENTARYZACJA";

    @Html.Partial("_StocktakingOnPartial");
}