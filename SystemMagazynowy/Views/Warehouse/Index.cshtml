@model IEnumerable<SystemMagazynowy.Models.Warehouse>

@if(ViewBag.IsStocktakingOn == -1)
{
    {
        ViewBag.Title = "Zarządzanie magazynem";
    }

    <h2 class="text-center">Zarządzanie magazynami</h2>

    <p>
        @if (User.IsInRole("canManageWarehouses"))
        {
        <span>
            <a href="@Url.Action("Create")" class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span> Dodaj nowy magazyn</a>
        </span>
        }
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Więcej", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
                    @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
                </td>
            </tr>
        }

    </table>
}
else
{
    ViewBag.Title = "INWENTARYZACJA";

    @Html.Partial("_StocktakingOnPartial");
}